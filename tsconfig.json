{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "outDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/json-schema-merge-allof.d.ts",
    "src/types.d.ts",
    "src/redisMessages.d.ts",
    "src/source/types.d.ts",
    "src/**/*.js",
    "src/schemas/*.json"
  ]
}
